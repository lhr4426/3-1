<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_cat_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/cat_1"
                android:layout_weight="1"/>


            <ImageView
                android:id="@+id/img_cat_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/cat_2"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/img_cat_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/cat_3"
                android:layout_weight="1"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_cat_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_cat_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_cat_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="1"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="결과보기"
                android:onClick="resultClick"/>


        </LinearLayout>




    </LinearLayout>






</LinearLayout>