<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="SharedPre Save"
            android:onClick="sharedPreferencesSaveClick"
            />

        <Button
            android:id="@+id/load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="SharedPre Load"
            android:onClick="sharedPreferencesLoadClick"
            />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Clear"
            android:onClick="clearText"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/internal_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="internal save"
            android:textSize="12dp"
            android:onClick="internalSaveClick"/>

        <Button
            android:id="@+id/internal_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="internal load"
            android:textSize="12dp"
            android:onClick="internalLoadClick"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/external_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="external save"
            android:textSize="12dp"
            android:onClick="externalSaveClick"/>

        <Button
            android:id="@+id/external_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="external load"
            android:textSize="12dp"
            android:onClick="externalLoadClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="copy"
            android:textSize="12dp"
            android:onClick="copyClick"/>

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            android:textSize="12dp"
            android:onClick="deleteClick"/>

        <Button
            android:id="@+id/showImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="showImage"
            android:textSize="12dp"
            android:onClick="showimageClick"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>





</LinearLayout>